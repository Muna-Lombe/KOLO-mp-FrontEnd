/* pages/room_show/room_show.wxss */

.navbar-back {
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.back {
  color: white;
  margin: 10rpx;
  position: absolute;
  top: 100rpx;
  left: 30rpx;
}

.back-icon {
  width: 20rpx;
  height: 38rpx;
}

.venue-img {
  width: 100%;
  height: 900rpx;
  background-size: cover;
  margin-top: -20px;
}

.info-container {
  padding: 10px;
  font-family: Calibri, sans-serif;
  margin-bottom: 15rpx;
}

.venue-name {
  font-size: 25px;
  font-weight: bold;
}

.address {
  display: flex;
  justify-content: space-between;
  margin: 15px 0px;
}

.venue-address {
  width: 200px;
  margin: 5px 0px;
}

.location-icon {
  width: 72rpx;
  height: 90rpx;
  margin-top: 10px;
}

.phone {
  font-size: 12px;
  font-weight: bold;
  color: #3562A7;
  margin: 10px 0px;
}

.capacity {
  margin: 20px 0px;
}

.description {
  margin: 20px 0px;
}

.name-button-flex {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.button-padding {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 100rpx;
}

.btn {
  background-color: #232323;
  color: white;
  border-radius: 5px;
  height: 75rpx;
  width: 90%;
  display: flex;
  flex-direction: center;
  justify-content: center;
  align-items: center;
}

.btn:hover {
  opacity: .8;
}

/* global uses */

.font-smaller {
  font-size: 13px;
}

.strong {
  font-weight: bold;
}

.show-container {
  width: 100%;
  height: 100%;
  bottom: 50rpx;
  position: relative;
  font-family: calibri, sans-serif;
}

.button-container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.modal-dialog {
  width: 540rpx;
  height: 350rpx;
  position: absolute;
  overflow: hidden;
  z-index: 5;
  background: #f9f9f9;
  margin: 100rpx 0rpx 0rpx 100rpx;
  padding: 30rpx;
  position: absolute;
  margin-left: auto;
  margin-right: auto;
  top: 50%;
  left: 0;
  right: 0;
}

.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0rpx;
  left: 0rpx;
  background: #000;
  opacity: 0.3;
  overflow: hidden;
  z-index: 1;
  color: #fff;
}

.modal-container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.d-flex {
  width: 100%;
  height: 100%;
  position: relative;
}

.confirm-cancel {
  display: flex;
  position: absolute;
  bottom: 0;
  right: 0;
}

.no-btn {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 130rpx;
  height: 70rpx;
  border-radius: 5px;
  background-color: rgb(236, 236, 236);
  margin-right: 10rpx;
}

.yes-btn {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 130rpx !important;
  height: 70rpx;
  border-radius: 5px;
  background-color: #61afc7;
  color: white;
}

