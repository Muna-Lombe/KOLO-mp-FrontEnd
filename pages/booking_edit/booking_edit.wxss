/* pages/bookings_new/bookings_new.wxss */
body {
  font-family: Calibri, sans-serif;
}

.header-text {
  display: flex;
  margin-top: 50rpx;
  font-size: 50rpx;
  color: white;
}

.navbar-back {
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.back {
  color: white;
  margin: 10rpx;
  position: absolute;
  top: 100rpx;
  left: 30rpx;
}

 /* form */

 .form-container {
   margin: 20rpx;
   display: flex;
   flex-direction: column;
   justify-content: space-between;
   position: relative;
 }
 
 .mb {
   margin-bottom: 40rpx;
 }

 .submit-btn {
   margin-top: 50rpx;
   background-color: #232323;
   color: white;
 }

 input {
  margin-top: 15rpx;
  font-size: 27rpx;
  background-color: white;
  padding: 5rpx 0rpx;
  border: 1px solid rgb(236, 236, 236);
  border-radius: 5px;
}

label {
  font-size: 35rpx;
}

.add-img {
  display:flex;
  justify-content: center;
  align-items: center;
  width: 320rpx;
  height: 70rpx;
  background-color: #c4c4c4;
  border-radius: 5px;
  color: white;
}

.add-img:hover {
  opacity: .9;
}

.upload-icon{
  width: 40rpx;
  height: 32rpx;
  margin-right: 5rpx;
}

.delete-icon {
  width: 32rpx;
  height: 35rpx;
}

.d-btn {
  color: #C23434;
  right: 0;
  position: absolute;
  font-size: 35rpx;
}

.mt {
  margin-top: 70rpx;
}