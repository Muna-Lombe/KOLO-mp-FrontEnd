/* pages/landing/landing.wxss */

.landing-container {
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-family: Calibri, sans-serif;
  position: relative;
}

.landing-logo {
  width: 500rpx;
  height: 240rpx;
  margin-left: 5rpx;
}

.wechat-btn {
  background-image: linear-gradient(-240deg, #51C332, #47A82C);
  /* background-color: #51C332; */
  height: 75rpx !important;
  width: 250rpx !important;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 5px;
  margin-top: 150rpx;
}

.login-btn:hover {
  opacity: .8;
}

.wechat-icon {
  width: 50rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

.login-btn {
  color: white;
  font-size: 30rpx;
}

.slogan {
  margin-top: 20rpx;
}

.strong-color {
  font-weight: bold;
  color: #77c3d8;
}

.landing-img {
  width: 828rpx;
  height: 800rpx;
  position: absolute;
  bottom: 0;
  right: 0;
}