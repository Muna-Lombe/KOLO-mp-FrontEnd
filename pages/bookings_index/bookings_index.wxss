/* pages/bookings_index/bookings_index.wxss */

.booking-header {
  display: flex;
  margin-top: 50rpx;
  font-size: 50rpx;
  color: white;
}

.booking-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding-top: 20rpx;
}

.booking {
  display: flex;
  justify-content: space-between;
  padding: 5px;
  margin: 10px 0px;
  width: 690rpx;
  height: 220rpx;
  background-color:white;
  box-shadow: 0px 0px 2px rgba(196,196,196,0.9);
  border-radius: 5px;
}

.name {
  font-size: 40rpx;
}

.price-book {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.price {
  text-align: end;
  font-size: 40rpx;
  color: #8fcddf;
}

.btn {
  background-color:#8fcddf;
  color: white;
  width: 280rpx !important;
  height: 70rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.btn:hover {
  background-color: #f1f1f1;
}

.strong {
  font-weight: bold;
}

.rebook-icon {
  width: 30rpx;
  height: 33rpx;
  right: 35rpx;
  bottom: 20rpx;
  margin-left: 10rpx;
}

