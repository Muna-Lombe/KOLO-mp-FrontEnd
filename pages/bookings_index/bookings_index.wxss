/* pages/bookings_index/bookings_index.wxss */

.booking-header {
  display: flex;
  margin-top: 50rpx;
  font-size: 50rpx;
  color: white;
}

.booking-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding-top: 20rpx;
}

.booking {
  display: flex;
  justify-content: space-between;
  padding: 5px;
  margin: 10px 0px;
  width: 690rpx;
  height: 220rpx;
  background-color:white;
  box-shadow: 0px 0px 2px rgba(196,196,196,0.9);
  border-radius: 5px;
}

.name {
  font-size: 40rpx;
}

.price-book {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.price {
  text-align: end;
  font-size: 40rpx;
  color: #3562A7;
}

.btn {
  background-color:white;
  border: 1px solid #3562A7;
  color: #3562A7;
}

.btn:hover {
  background-color: #f1f1f1;
}

.strong {
  font-weight: bold;
}

