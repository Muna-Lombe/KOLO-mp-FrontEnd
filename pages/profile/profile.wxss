/* pages/profile/profile.wxss */

body {
  font-family: Calibri, sans-serif;
}

.navbar {
  height: 500rpx;
  flex-direction: column;
  padding-top: 90rpx;
  position: relative;
  background-image: linear-gradient(-60deg, #A9E4F4, #61afc7);
}

.curvedline {
  position: absolute;
  width: 828rpx;
  height: 114rpx;
  z-index: -1;
  opacity: .2;
}

.avatar-name {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  text-align: center;
  margin-bottom: 10rpx;
}

.user-name {
  margin-top: 20rpx;
  font-size: 50rpx;
  color: white;
}

.name-editprofile {
  margin-bottom: 100rpx;
}

.edit-profile {
  color: #232323;
  opacity: .5;
}

.border-around {
  border-radius: 50%;
  padding-left: 10rpx;
  padding-right: 10rpx;
  padding-top: 10rpx;
  border: .5rpx solid white;
}

.border-around image {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
}

.btns {
  width: 520rpx;
  margin-top: 50rpx;
  display: flex;
  justify-content: space-evenly;
  align-items: center;
  bottom: 10px;
  /* background-image: linear-gradient(-60deg, #232323, #504c4c); */
  background-color: #ffffff;
  height: 150rpx;
  position: absolute;
  bottom: -70rpx;
  border-radius: 20px;
  box-shadow: 0px 2px 5px rgba(0,0,0,0.3);
}

.bookings-btn {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: white;
  border-radius: 5px;
  text-align: center;
  font-size: 25rpx;
}

.bookings-btn:hover {
  opacity: .9;
}

.addlist-icon {
  width: 50rpx;
  height: 50rpx;
}

.favourites {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: white;
  border-radius: 5px;
  text-align: center;
  font-size: 25rpx;
}

.favourites:hover {
  opacity: .9;
}

.heart-icon {
  width: 57rpx;
  height: 50rpx;
}

.small-text {
  font-size: 22rpx;
}

/* listing css */

.listing-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding-top: 20rpx;
  margin-top: 80rpx;
}

.listing {
  display: flex;
  padding: 5px;
  margin: 10px 0px;
  width: 690rpx;
  height: 220rpx;
  background-color:white;
  box-shadow: 0px 0px 2px rgba(50, 92, 155,0.3);
  border-radius: 5px;
}

.name-date {
  margin-top: 40rpx;
  width: 350rpx;
  position: relative;
}

.listing-img {
  width: 130rpx;
  height: 130rpx;
  background-size: cover;
  border-radius: 5px;
  margin-left: 20rpx;
  margin-right: 25rpx;
}

.strong {
  font-weight: bold;
}

.name {
  font-size: 37rpx;
}

.posted {
  font-size: 25rpx;
}

.info-edit {
  display: flex;
}

.btn {
  position: absolute;
  color:#61afc7;
  bottom: 0;
  right: 0;
  font-size: 35rpx;
}

.text-center {
  text-align: center;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

/* new listing */

.new-listing {
  display: flex;
  padding: 5px;
  margin: 10px 0px;
  width: 690rpx;
  height: 220rpx;
  background-color:white;
  box-shadow: 0px 0px 2px rgba(196,196,196,0.9);
  border-radius: 5px;
}

.align-center {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.add-img {
  width: 130rpx;
  height: 130rpx;
  background-size: cover;
  border-radius: 5px;
  margin-left: 20rpx;
  margin-right: 25rpx;
  opacity: .3;
  border: 1px solid rgba(196,196,196,0.3);
}

.make-listing {
  color: rgba(196,196,196,0.8);
}

.edit-icon {
  width: 30rpx;
  height: 30rpx;
  background-size: cover;
}

.edit-delete {
  width: 170rpx;
  position: relative;
}



